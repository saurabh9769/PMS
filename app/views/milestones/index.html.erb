<div class="container">
  <div class="pull-left">
    <i class="fa fa-arrow-left"></i> <%= link_to "Go To Projects"  , projects_path %>
  </div>
  <div class="row tile_count">
    <%= render 'search_milestone' %>
    <div class="panel-heading flex-box flex-vertical-center-align justify-content-space-between">
      <h3 class="col-md-9">Milestones</h3>
    </div>
    <div class="container">
      <div class="col-md-12">
       <table class="table table-list-search table-hover">
          <div class="pull-right">
            <% if can? :manage, Milestone %>
              <%= link_to 'New Milestone', new_project_milestone_path(@project) , :class => "btn btn-info" %>
            <% end %>
          </div>
          <br>
          <br>
          <br>
          <thead>
            <tr>
              <th><%= sort_link(@q, :name) %></th>
              <th>Description</th>
              <th>Start date</th>
              <th>End date</th>
              <th colspan="1" style="width: 260px;">Manage</th>
            </tr>
          </thead>
          <tbody>
          <%if @q.result.present? %>
            <% @q.result.each do |milestone| %>
              <tr>
                <td><%= link_to milestone.name , project_milestone_path(project_id: milestone.projects.last.id , id: milestone.id) %></td>
                <td><%= milestone.description %></td>
                <td><%= milestone.start_date %></td>
                <td><%= milestone.end_date %></td>
                <td><%= link_to raw("<span class='fa fa-wrench'></span>Edit"), edit_project_milestone_path(project_id: milestone.projects.last.id , id: milestone.id) , :class => "btn btn-info btn-sm" %> &nbsp; &nbsp;
                    <%= link_to raw("<span class='fa fa-trash'></span>Delete"), project_milestone_path(project_id: milestone.projects.last.id , id: milestone.id), method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-danger btn-sm" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @milestones %>
        <%end%>
        <br>
        <br>
      </div>
    </div>
  </div>
</div> 