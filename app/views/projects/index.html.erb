<div class="panel panel-default">
  <%= form_tag(projects_path, :method => "get", id: "search-form" , :id => "custom-search-form" , :class => "form-search form-horizontal pull-right" ) do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Projects" %>
    <%= submit_tag "Search" %>
  <% end %>
  <div class="panel-heading">
    <h3>Projects</h3>
  </div>
  <div class="panel-body">
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
       <table class="table table-list-search table-bordered">
          <div class="pull-right">
            <%= link_to 'New Project', new_project_path , :class => "btn btn-info" %>
          </div>
          <br>
          <br>
          <br>
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Start date</th>
              <th>End date</th>
              <th colspan="3">Manage</th>
            </tr>
          </thead>

          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td><%= project.name %></td>
                <td><%= project.description %></td>
                <td><%= project.start_date %></td>
                <td><%= project.end_date %></td>
                <td><%= link_to 'Show', project %></td>
                <td><%= link_to 'Edit', edit_project_path(project) %></td>
                <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <br>
      </div>
    </div>
  </div>
</div>