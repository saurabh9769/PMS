<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="text-center">
            <div class="row">
              <div class="col-xs-12">
                <p><strong><h4>Sign Up</h4></strong></p>
              </div>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <div class="form-group">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= devise_error_messages! %>
                  
                  <div class="field">
                    <%= f.email_field :email, autofocus: true, :class => "form-control" , :placeholder => "Email Address" %>
                  </div>
                
                  <div class="field">
                    <br>
                    <%= f.password_field :password, autocomplete: "off" , :class => "form-control" , :placeholder => "Password (minimum 8 characters)" %>
                  </div>

                  <div class="field">
                    <br />
                    <%= f.password_field :password_confirmation, autocomplete: "off" , :class => "form-control" , :placeholder => "Password Confirmation" %>
                  </div>

                  <div class="field">
                    <div class="text-center">
                      <br>
                      <%= f.collection_select :role, User::ROLES, :to_s, :humanize , {prompt: "Select a Role"}, {class: "form-control"} %>
                    </div>
                  </div>
                  
                  <br>
                  
                  <div class="form-group">
                    <div class="row">
                      <div class="col-sm-6 col-sm-offset-3">
                        <div class="actions">
                          <%= f.submit "Sign up" , :class => "btn btn-success btn-block form" %>
                        </div>
                        <div class="form-group">
                          <div class="row">
                            <div class="col-lg-12">
                              <div class="text-center">
                              <br>
                              <%- if controller_name != 'sessions' %>
                                Already have an account ? <%= link_to "Log in", new_session_path(resource_name) %><br />
                              <% end -%>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>