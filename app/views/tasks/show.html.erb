<div class="col-md-6 col-sm-3 col-xs-12 col-md-offset-3">
  <div class="pull-right">
    <%= link_to 'Edit', edit_project_milestone_task_path(project_id: @project.id , milestone_id: @milestone.id , id: @task.id) , :class => ""  %> |
    <%= link_to 'Back', project_milestone_tasks_path(project_id: @project.id , milestone_id: @milestone.id) , :class => ""  %>
    <br>
    <br>
  </div>
</div>
<div class="col-md-6 col-sm-3 col-xs-12 col-md-offset-3">
  <section class="panel">
    
    <div class="x_title">
      <h2>Task Description</h2>
      <div class="clearfix"></div>
    </div>
    <div class="panel-body">
      <h3 class="green"><i class="fa fa-paint-brush"></i> <%= @task.name %></h3>
      <br>
      <div class="project_detail">
        <div class="row">
          <div class="col-md-12">
            <div class="well col-md-12">
              <p>
                <strong>Description:</strong>
                <%= @task.description %>
              </p>
            </div>
          </div>
        </div>
        <div class="clearfix"></div>

        <p>
          <p class="title">Start Date : </p>
          <p><%= @task.start_date %> </p>
        </p>
        <p>
          <p class="title">End Date : </p>
          <p><%= @task.end_date %> </p>
        </p>
        <p>
          <p class="title">Status:</p>
          <p> <%= @task.status %> </p>
        </p>
      </div>
    </div>
  </section>
</div>



